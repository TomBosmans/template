{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true
  },
  "include": ["app", "lib", "cli.ts"]
}
