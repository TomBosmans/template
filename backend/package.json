{
  "name": "backend",
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test node --no-warnings --experimental-strip-types --test '**/*.spec.ts'",
    "test:file": "NODE_ENV=test node --no-warnings --experimental-strip-types --test",
    "dev": "node --no-warnings --experimental-strip-types --watch-path . 'app/main.ts'",
    "prod": "node --no-warnings --experimental-strip-types 'app/main.ts'",
    "lint": "biome check .",
    "tsc": "tsc --noEmit",
    "db:up": "dbmate up && npm run db:codegen",
    "db:rebuild": "node --no-warnings --experimental-strip-types src/rebuildSql.ts && npm run db:codegen",
    "db:up:prod": "dbmate up",
    "db:down": "dbmate down && npm run db:codegen",
    "db:migration": "dbmate new",
    "db:up:test": "dbmate --url $DATABASE_TEST_URL --no-dump-schema up",
    "db:down:test": "dbmate --url $DATABASE_TEST_URL --no-dump-schema down",
    "db:dump": "dbmate dump",
    "db:codegen": "kysely-codegen --camel-case --out-file=db/db.d.ts --exclude-pattern='public.schema_migrations'"
  },
  "imports": {
    "#app/*": "./app/*",
    "#db/*": "./db/*",
    "#lib/*": "./lib/*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.2",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.2",
    "@types/swagger-ui-express": "^4.1.8",
    "emails": "file:../emails",
    "kysely-codegen": "^0.19.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anatine/zod-mock": "^3.14.0",
    "@anatine/zod-openapi": "^2.2.8",
    "@casl/ability": "^6.7.3",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@react-email/components": "1.0.0",
    "awilix": "^12.0.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dbmate": "^2.28.0",
    "express": "^5.1.0",
    "kysely": "^0.28.8",
    "lodash": "^4.17.21",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pg-boss": "^12.1.0",
    "qs": "^6.14.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sift": "^17.1.3",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  }
}
