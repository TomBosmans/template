{
  "name": "backend",
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test node --no-warnings --experimental-strip-types --test '**/*.spec.ts'",
    "test:file": "NODE_ENV=test node --no-warnings --experimental-strip-types --test",
    "dev": "node --no-warnings --experimental-strip-types --watch-path . 'app/main.ts'",
    "lint": "biome check .",
    "tsc": "tsc --noEmit",
    "db:up": "dbmate up && npm run db:codegen",
    "db:rebuild": "node --no-warnings --experimental-strip-types src/rebuildSql.ts && npm run db:codegen",
    "db:up:prod": "dbmate up",
    "db:down": "dbmate down && npm run db:codegen",
    "db:migration": "dbmate new",
    "db:up:test": "dbmate --url $DATABASE_TEST_URL --no-dump-schema up",
    "db:down:test": "dbmate --url $DATABASE_TEST_URL --no-dump-schema down",
    "db:dump": "dbmate dump",
    "db:codegen": "kysely-codegen --camel-case --out-file=db/db.d.ts --exclude-pattern='public.schema_migrations'"
  },
  "imports": {
    "#app/*": "./app/*",
    "#db/*": "./db/*",
    "#lib/*": "./lib/*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.9.2",
    "@types/pg": "^8.15.6",
    "kysely-codegen": "^0.19.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anatine/zod-mock": "^3.14.0",
    "@anatine/zod-openapi": "^2.2.8",
    "awilix": "^12.0.5",
    "dbmate": "^2.28.0",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "sift": "^17.1.3",
    "zod": "^3.25.76"
  }
}
